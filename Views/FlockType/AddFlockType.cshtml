@model NikeFarms.v2._0.Models.ViewModels.AddFlockTypeVM

@{ ViewBag.Title = "Add FlockTypes"; }
@{
    Layout = "_StoreManagerDashboard";
}


<div class="container">
    <div class="">
        <div class="">
            <div class="">
                <div class="">
                    <br /><br /><h2 class="text-center font-weight-bolder" style="color:darkred"><i class="fas fa-plus"></i> Add Flock Type</h2><br /><br />
                </div>
                <form method="post">
                    <div class="form-row">
                        <div class="form-group col-md-5">
                            <label asp-for="Name" class="form-check-label font-weight-bold"><span style="color: darkred">*</span> Flock Type</label>
                            <input style="margin-right: 20px" asp-for="Name" class="form-control " placeholder="Enter Flock Type" />
                            <span asp-validation-for="Name" style="color:darkred"></span>
                        </div>
                        <div class="form-group col-md-2">
                        </div>
                        <div class="form-group col-md-5">
                            <label asp-for="Description" class="form-check-label font-weight-bold"><span style="color: darkred"></span> Description</label>
                            <input style="margin-right: 20px" asp-for="Description" class="form-control " placeholder="Description" />
                            <span asp-validation-for="Description" style="color:darkred"></span>
                        </div>
                    </div>

                    <div class="mt-3">
                        <input type="submit" value="Add Flock Type" class="btn font-weight-bolder" style="background-color:darkgoldenrod" />
                        <a style="margin-left: 5%; color: darkred" asp-action="Index">Back Home</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}