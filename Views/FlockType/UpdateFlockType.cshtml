@model NikeFarms.v2._0.Models.ViewModels.UpdateFlockTypeVM
@{
    Layout = "_StoreManagerDashboard";
}
@{
    ViewData["Title"] = "Update FlockType";
}



<div class="">
    <br /><br /><h2 class="text-center font-weight-bolder" style="color:darkred"><i class="fas fa-edit"></i> Edit Flock Type</h2><br /><br />
</div>
<form method="post">
    <input hidden asp-for="Id" />
    <div class="form-row">
        <div class="form-group col-md-5">
            <label asp-for="Name" class="form-check-label font-weight-bold"><span style="color: darkred">*</span> Flock Type</label>
            <input style="margin-right: 20px" asp-for="Name" class="form-control " placeholder="Flock Type" />
            @if (ViewBag.Message == "error")
            {
                <p style="color:red; " class="font-weight-bolder mb-2">*A Flock Type with this Name already Exist!!</p>
            }
            <span asp-validation-for="Name" style="color:darkred"></span>
        </div>

        <div class="form-group col-md-2">
        </div>

        <div class="form-group col-md-5">
            <label asp-for="Description" class="form-check-label font-weight-bold"><span style="color: darkred">*</span> Description</label>
            <input style="margin-right: 20px" asp-for="Description" class="form-control " placeholder="Enter Description" />
            <span asp-validation-for="Description" style="color:darkred"></span>
        </div>

    </div>

    <div class="mt-3">
        <input type="submit" value="Edit" class="btn font-weight-bolder" style="background-color:darkgoldenrod" />
        <a style="margin-left: 5%; color: darkred" asp-action="Index">Back Home</a>
    </div>

</form>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
