@model NikeFarms.v2._0.Models.ViewModels.UpdateStoreAllocationVM

@{ ViewBag.Title = "Update Allocation"; }
@{
    Layout = "_StoreManagerDashboard";
}


<div class="container">
    <div class="">
        <div class="">
            <div class="">
                <div class="">
                    <br /><br /><h2 class="text-center font-weight-bolder" style="color:darkred"><i class="fas fa-edit"></i> Edit Store Allocation</h2><br /><br />
                </div>
                @if (ViewBag.Message == "error")
                {
                    <p style="color:red; " class="text-center font-weight-bolder  mb-2">*The No. of Item you want to Allocate is more than what you have in Store</p>
                }
                <form method="post">
                    <input hidden asp-for="Id" />
                    <div class="">
                        <div class="form-row">
                            <div class="form-group col-md-5">
                                <label class="form-check-label font-weight-bold" asp-for="StoreItemId"><span style="color: darkred">*</span> Select Store Item</label>
                                <select asp-for="StoreItemId" asp-items="@Model.StoreItemList" class="form-control">
                                    <option disabled selected>--Select Store Item--</option>
                                </select>
                                <span asp-validation-for="StoreItemId" style="color:darkred"></span><br>
                            </div>
                            <div class="form-group col-md-2">
                            </div>
                            <div class="form-group col-md-5">
                                <label asp-for="NoOfItem" class="form-check-label font-weight-bold"><span style="color: darkred">*</span> Total No. Of Item Allocated</label>
                                <input asp-for="NoOfItem" class="form-control" placeholder="Total No. Of Item" type="number" min="1" />
                                <span asp-validation-for="NoOfItem" style="color:darkred"></span>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-5">
                                <label class="form-check-label font-weight-bold" asp-for="ManagerId"><span style="color: darkred">*</span> Allocate To:</label>
                                <select  class="form-control">
                                    <option disabled selected>@Model.SelectedManager</option>
                                </select>
                                <span asp-validation-for="ManagerId" style="color:darkred"></span><br>
                            </div>

                        </div>
                    </div>
                    <div class="">
                        <input type="submit" value="Edit" class="btn font-weight-bolder" style="background-color:darkgoldenrod" />
                        <a style="margin-left: 5%; color: darkred" asp-action="Index">Back Home</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}